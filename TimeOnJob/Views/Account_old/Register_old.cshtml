@model Alia.ViewModels.RegisterViewModel

<div class="hero-wrap js-fullheight" style="background-image: url('/images//bg_2.jpg'); transform: translateY(-30px); height: 500px;">
    <div class="container">
        <div class="modal-dialog modal-dialog-centered register_modal" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="margin-left: 15px">New user registration</h5>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Account" asp-action="Register">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group column">
                            <label asp-for="Email" class="col-sm-12 col-form-label"></label>
                            <div class="col-sm-12">
                                <input class="form-control" asp-for="Email" />
                            </div>
                            <span asp-validation-for="Email" style="margin-left: 15px"></span>
                        </div>

                        <div class="form-group column">
                            <label asp-for="Password" class="col-sm-12 col-form-label"></label>
                            <div class="col-sm-12">
                                <input class="form-control" asp-for="Password" />
                            </div>
                            <span asp-validation-for="Password" style="margin-left: 15px"></span>
                        </div>

                        <div class="form-group column">
                            <label asp-for="PasswordConfirm" class="col-sm-12 col-form-label"></label>
                            <div class="col-sm-12">
                                <input class="form-control" asp-for="PasswordConfirm" />
                            </div>
                            <span asp-validation-for="PasswordConfirm" style="margin-left: 15px"></span>
                        </div>

                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary" style="margin-right: 15px">Registration</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>