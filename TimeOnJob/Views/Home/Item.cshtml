@model Alia.ViewModels.ItemListViewModel
@addTagHelper *, Alia
@{
    ViewBag.Title = "";
}
<style>
    @@font-face {
        font-family: 'FontAwesome';
        src: url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/fonts/fontawesome-webfont.woff2') format('woff2'), url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/fonts/fontawesome-webfont.woff') format('woff'), url('https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/fonts/fontawesome-webfont.ttf') format('truetype');
        font-weight: normal;
        font-style: normal
    }

    .glyphicon {
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale
    }

    .glyphicon-chevron-down:before {
        content: "\f078";
    }

    .glyphicon-chevron-up:before {
        content: "\f077";
    }
</style>
<div class="background">

    <div class="container-shop">
        <div class="filter-block">
            <form class="form-filter" asp-action="Item" asp-controller="Home" method="get">

                @Html.TextBox("name", Model.FilterViewModel.Name, htmlAttributes: new { @class = "input-filter", @placeholder = "key word" })
                @Html.DropDownList("category", Model.FilterViewModel.Categories, htmlAttributes: new { @class = "select-filter" })
                <select name="region" asp-items="ViewBag.Regions" class="select-filter" id="region">
                </select>
                <select name="locality" asp-items="ViewBag.Localities" class="select-filter" id="locality">
                </select>
                @section scripts{
                    <script type="text/javascript">
                    $(function () {
                        $('#region').change(function()
                        {
                            // получаем выбранный id
                            var id = $(this).val();
                            $.ajax({
                                type: 'GET',
                                url: '@Url.Action("GetItems")/' + id,
                                success: function (data) {
                                    // заменяем содержимое присланным частичным представлением
                                    $('#locality').replaceWith(data);
                                }
                            });
                        });
                    })
                    </script>
                }
                <input class="filter-button" asp-controller="Home" asp-action="Item" formmethod="get" type="submit" value="Filter">

            </form>
        </div>
        <div class="cards-main-block">
            @foreach (var item in Model.Items)
            {
                
            <div class="gallery">
                @if (item.IsReserved == 1)
                {
                    <div class="reserved">Reserved</div>
                }
                <a target="_blank" asp-controller="Home" asp-action="ItemDetails" asp-route-id="@item.ItemId">
                    @if (item.PreviewImageData != null)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.PreviewImageData))" />

                    }
                </a>
                <div class="desc">@item.ItemName </div>
            </div>

            }
            <div class="filter-block-2" style="margin-bottom: 0px; margin-left:0px; width:100%; ">
                <div class="block-27 center">

                    @if (Model.PageInfo.EndPage > 1)
                    {
                        <ul class="ul-pag color-pag">
                            @if (Model.PageInfo.CurrentPage > 1)
                            {
                                <li class="prev-pag li-pag color-pag">
                                    <page-link page="@(Model.PageInfo.CurrentPage-1)" action="Item"
                                               category="@(Model.FilterViewModel.SelectedCategory)"
                                               locality="@(Model.FilterViewModel.SelectedLocality)"
                                               name="@(Model.FilterViewModel.Name)"
                                               sort-view-model="@(Model.SortViewModel)">&lt&lt</page-link>

                                </li>
                            }

                            @for (var page = Model.PageInfo.StartPage; page <= Model.PageInfo.EndPage; page++)
                            {
                                @if (page == Model.PageInfo.CurrentPage)
                                {
                                    <li class="li-pag  color-pag">
                                        <page-link class="active" style="background-color: #b5b89e;" page="@(Model.PageInfo.CurrentPage)" action="Item"
                                                   category="@(Model.FilterViewModel.SelectedCategory)"
                                                   locality="@(Model.FilterViewModel.SelectedLocality)"
                                                   name="@(Model.FilterViewModel.Name)"
                                                   sort-view-model="@(Model.SortViewModel)">@(page)</page-link>
                                    </li>
                                }
                                @if (page != Model.PageInfo.CurrentPage)
                                {
                                    <li class="li-pag color-pag">
                                        <page-link page="@(page)" action="Item"
                                                   category="@(Model.FilterViewModel.SelectedCategory)"
                                                   locality="@(Model.FilterViewModel.SelectedLocality)"
                                                   name="@(Model.FilterViewModel.Name)"
                                                   sort-view-model="@(Model.SortViewModel)">@(page)</page-link>
                                    </li>
                                }
                            }
                            @if (Model.PageInfo.CurrentPage < Model.PageInfo.TotalPages)
                            {
                                <li class="next-pag li-pag color-pag">
                                    <page-link page="(Model.PageInfo.CurrentPage+1)" action="Item"
                                               category="@(Model.FilterViewModel.SelectedCategory)"
                                               locality="@(Model.FilterViewModel.SelectedLocality)"
                                               name="@(Model.FilterViewModel.Name)"
                                               sort-view-model="@(Model.SortViewModel)">&gt&gt</page-link>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="offer-block"></div>
       
    </div>
    
</div>
