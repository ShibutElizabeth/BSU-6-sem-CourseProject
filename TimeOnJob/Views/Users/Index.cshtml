@model IEnumerable<Alia.Models.User>
@{
    ViewBag.Title = "Users list";
}
    <div class="back-table" style="height:auto;" role="document">
        <div class="back-tbl center" style="margin-top: 30px;">
            <label class="text-top">Add user</label>
            <a class="top-btn" asp-action="Create"><img src="/css/img_new/add.png" width="30" /></a>
            <table style="margin-bottom:50px;">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">E-mail</th>
                        <th scope="col"></th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="top-btn" asp-action="Edit" asp-route-id="@user.Id"><img src="/css/img_new/edit.png" width="30" /></a>
                                <a class="top-btn" asp-action="ChangePassword" asp-route-id="@user.Id"><img src="/css/img_new/password.png" width="30" /></a>
                                <button type="submit" class="top-btn">
                                    <img src="/css/img_new/delete.png" width="30" style="line-height: 30px;">
                                </button>
                            </form>
                        </td>
                       
                    </tr>

                    }
                </tbody>
                </table>
        </div>
    </div>
