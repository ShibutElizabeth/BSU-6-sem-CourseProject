@model Alia.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}
    <div class="back-table" style="height:600px;" role="document">
        <div class="back-tbl center" style="margin-top: 30px;">
            <label class="text-top">Change @Model.Email's the password @Model.Email</label>
            <form asp-action="ChangePassword" asp-controller="Users">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
               
                <div class="form-filter-2">
                    <label asp-for="NewPassword" class="text-top">New Password</label>
                    <input type="text" asp-for="NewPassword" class="input-filter-2" />
                    <button type="submit" class="filter-button-2">Save</button>
                </div>
                
            </form>
            
        </div>
    </div>
    