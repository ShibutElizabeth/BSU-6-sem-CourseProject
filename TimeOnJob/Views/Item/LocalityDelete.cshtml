@model Alia.Models.Locality
@{
    ViewBag.Title = "Removal locality";
}
    <div class="back-table" style="height:600px;" role="document">
        <div class="back-tbl center" style="margin-top: 30px;">
            <table style="margin-left:78px;">
                <thead>
                    <tr><th>ID</th><th>Name</th><th>Region ID</th><th></th></tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(model => model.LocalityId)</td>
                        <td>@Html.DisplayFor(model => model.LocalityName)</td>
                        <td>@Html.DisplayFor(model => model.RegionId)</td>
                        <td>
                            <form asp-controller="Item" asp-action="LocalityDelete" method="post">
                                <button type="submit" class="top-btn"><img src="/css/img_new/delete.png" width="30" /></button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
            
        </div>
    </div>