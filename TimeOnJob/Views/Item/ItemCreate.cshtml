@model Alia.ViewModels.ItemViewModel
@{
    ViewData["Title"] = "Add Item";
}
    <form asp-action="ItemCreate" asp-controller="Item" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="ItemName" class="control-label">Item Name</label>
            <input type="text" asp-for="ItemName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group form-inline">
            <label asp-for="Price" class="control-label">Price($)</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>

        @*<img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.PreviewImageData))" />*@

        <div class="form-group">
            <label>Choose image</label>
            <input name="uploadedFile" type="file" class="form-control" />
        </div>

        <p>
            Locality <br />
            @Html.DropDownListFor(model => model.LocalityId, ViewBag.Localities as SelectList)
        </p>
        <p>
            Item's category <br />
            @Html.DropDownListFor(model => model.CategoryId, ViewBag.Categories as SelectList)
        </p>

        <p>
            <input type="submit" value="Create Item" />
        </p>
    </form>