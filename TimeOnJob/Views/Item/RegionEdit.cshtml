@model Alia.Models.Region
@{
    ViewBag.Title = "Edit region";
}

<div class="back-table" style="height:600px;" role="document">
    <div class="back-tbl center" style="margin-top: 30px;">
        <form asp-action="RegionEdit" asp-controller="Item" asp-route-regionid="@Model.RegionId" class="form-filter-2">

            <label asp-for="RegionName" class="text-top">Name</label>
            <input type="text" asp-for="RegionName" class="input-filter-2" />
            <button type="submit" class="filter-button-2">Save</button>
        </form>
    </div>
</div>
