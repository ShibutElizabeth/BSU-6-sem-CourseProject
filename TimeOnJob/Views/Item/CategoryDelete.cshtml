@model Alia.Models.Category
@{
    ViewBag.Title = "Category delete";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <table class="table">
                <tr><th>id</th><th>name</th></tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.CategoryId)</td>
                    <td>@Html.DisplayFor(model => model.CategoryName)</td>
                </tr>
                <form asp-controller="Item" asp-action="CategoryDelete" method="post">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Delete category</button>
                    </div>
                </form>
            </table>
        </div>
    </div>
</div>