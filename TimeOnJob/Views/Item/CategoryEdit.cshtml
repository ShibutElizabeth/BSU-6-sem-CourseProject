@model Alia.Models.Category
@{
    ViewBag.Title = "Edit category";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <form asp-action="CategoryEdit" asp-controller="Item" asp-route-categoryid="@Model.CategoryId">
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Category name</label>
                    <input type="text" asp-for="CategoryName" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>