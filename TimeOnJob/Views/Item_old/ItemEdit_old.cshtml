@model Alia.Models.Item
@{
    ViewBag.Title = "Edit Item";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-body">
            <form asp-action="ItemEdit" asp-controller="Item" asp-route-localityid="@Model.ItemId">
                <div class="form-group">
                    <label asp-for="ItemName" class="control-label">Item name</label>
                    <input type="text" asp-for="ItemName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description</label>
                    <input type="text" asp-for="Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Description</label>
                    <input type="text" asp-for="Price" class="form-control" />
                </div>
                <p>
                    Category <br />
                    @Html.DropDownListFor(model => model.CategoryId, ViewBag.Regions as SelectList)
                </p>
                <p>
                    Locality <br />
                    @Html.DropDownListFor(model => model.LocalityId, ViewBag.Regions as SelectList)
                </p>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>