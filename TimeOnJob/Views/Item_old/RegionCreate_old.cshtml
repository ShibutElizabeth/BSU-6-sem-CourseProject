@model Alia.Models.Region
@{
    ViewData["Title"] = "Add region";
}

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Create region</h5>
        </div>
        <div class="modal-body">
            <form asp-action="RegionCreate" asp-controller="Item">
                <div class="form-group">
                    <label asp-for="RegionName" class="control-label">Name</label>
                    <input type="text" asp-for="RegionName" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>