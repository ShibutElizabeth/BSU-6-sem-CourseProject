@model Alia.ViewModels.RegisterViewModel
    
    <div class="logsign-back"></div>
    <div class="form-contact">
        <div id="id01" class="modal">
            <div id="form" class="div-sign-up">
                <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">×</span>
                <form class="modal-content" method="post" asp-controller="Account" asp-action="Register">
                    <div class="container-1">
                        <h1 class="h1-sign-up">Sign Up</h1>
                        <hr>
                        <input asp-for="Email" type="text" placeholder="Enter Email" name="email" class="input-sign-up" required>

                        <input asp-for="Password" type="password" placeholder="Enter Password" name="psw" class="input-sign-up" required>

                        <input asp-for="PasswordConfirm" type="password" placeholder="Repeat Password" name="psw-repeat" class="input-sign-up" required>

                        <label class="mark">
                            Remember me?
                            <input type="checkbox" checked="checked" name="remember" style="margin-left: 10px;">
                        </label>

                        <div class="a-btns">
                            <input type="button" onclick="document.getElementById('id01').style.display='none'" class="button-sign-up" value="Cancel">
                            <input type="submit" class="button-sign-up" value="Sign Up">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script>
            // Get the modal
            let modal2 = document.getElementById('id01');

            // When the user clicks anywhere outside of the modal, close it
            window.onclick = function (event) {
                if (event.target == modal2) {
                    modal2.style.display = "none";
                }
            }
        </script>
    </div>
