@model Alia.ViewModels.LoginViewModel

<div class="hero-wrap js-fullheight" style="background-image: url('/images//bg_2.jpg'); transform: translateY(-30px);">
    <div class="container">
        <div class="modal-dialog modal-dialog-centered login_modal" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="margin-left: 15px">Sign in to the app</h5>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group column">
                            <label asp-for="Email" class="col-sm-12 col-form-label"></label>
                            <div class="col-sm-12">
                                <input class="form-control" asp-for="Email" />
                            </div>
                            <span asp-validation-for="Email" style="margin-left: 15px"></span>
                        </div>

                        <div class="form-group column">
                            <label asp-for="Password" class="col-sm-12 col-form-label"></label>
                            <div class="col-sm-12">
                                <input class="form-control" asp-for="Password" />
                            </div>
                            <span asp-validation-for="Password" style="margin-left: 15px"></span>
                        </div>

                        <div class="form-group row" style="margin-left: 15px">
                            <div class="offset col-sm-1">
                                <input class="form-control signInInput" asp-for="RememberMe" />
                            </div>
                            <label asp-for="RememberMe" class="col-sm-10 col-form-label signInLabel"></label>
                        </div>

                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-primary" style="margin-right: 15px">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>