<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Home</title>
    <!-- THEME STYLES -->
    <link href="~/css/Design.css" rel="stylesheet" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">

    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <link rel="stylesheet" href="~/css/aos.css">

    <link rel="stylesheet" href="~/css/ionicons.min.css">

    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">


    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    

</head>
<body>
    <!-- HEADER -->
    <header class="header">
        <div>
            <ul class="ul-header">
                <li class="li-header"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="li-header"><a asp-area="" asp-controller="Home" asp-action="Item">Shop</a></li>
                <li class="li-header">
                    <!-- Logo -->
                    <div class="navbar-logo">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <img class="navbar-logo-img" src="/css/img_new/logoAlia.png">
                        </a>
                    </div>
                    <!-- End Logo -->
                </li>
                <li class="li-header"><a href="#contact">Contact</a></li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="li-header dropdown">
                        <a id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                        <div class="dropdown-content" aria-labelledby="navbarDropdownMenuLink">
                            <a asp-area="" asp-controller="Item" asp-action="ItemCreate">Create Item</a>
                            <a asp-area="" asp-controller="Item" asp-action="Items">Items</a>
                            <a asp-area="" asp-controller="Item" asp-action="Locality">Localities</a>
                            <a asp-area="" asp-controller="Item" asp-action="Region">Regions</a>
                            <a asp-area="" asp-controller="Item" asp-action="Category">Categories</a>
                            <a asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                            <a asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                            <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
                                <ul class="navbar-nav ml-auto">
                                    <li class="nav-item">
                                        @*<a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.Identity.Name!</a>*@
                                        <a class="nav-link">Hello @User.Identity.Name!</a>
                                    </li>
                                    <li class="nav-item">
                                        <button type="submit" class="btn btn-link navbar-btn navbar-link nav-link">Log out</button>
                                    </li>
                                </ul>
                            </form>
                        </div>

                    </li>
                    
                }
                else
                {
                    <li class="li-header"><a class="a-si" asp-controller="Account" asp-action="Login">Sign in</a></li>
                }


            </ul>
        </div>
    </header>
   
    @RenderBody()
    <footer>
        <div class="contact-block">
            <div class="left-part">
                <h3 class="contact-text">
                    Minsk, ul. Oktyabrskaya, 10
                    <br>Tel. +375 (33) 673-93-96
                    <br>ellis.shybut@mail.ru
                </h3>
            </div>
            <div class="right-part">
                <h4 class="register-now">Don't have an accout?<br>Register now!</h4>

                <div class="form-contact">
                    <a class="a-si" asp-controller="Account" asp-action="Register"><input type="button" class="register-button" value="Sign Up"></a>

                </div>
            </div>
            <h4 class="copyright">Copyright© - 2021 Alia</h4>
        </div>
    </footer>


    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
